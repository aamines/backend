        "/api/v1/auth/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "user registration",
                "description": "User registration",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "names": {
                            "type": "string",
                            "example": "Mfitumukiza Peter"
                        },
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        },
                        "password": {
                            "type": "string",
                            "example":"string",
                            "required": true
                        },
                        "country": {
                            "type":"string",
                            "example":"string",
                            "require": true
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "account created, check your email"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
