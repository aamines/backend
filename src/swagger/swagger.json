        "/api/v1/auth/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "user registration",
                "description": "User registration",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "fullName": {
                            "type": "string",
                            "example": "Byose David"
                        },
                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": true
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "account created, check your email"
                    }
                }
            }
        },
        "/api/v1/auth/verify-email": {
            "put": {
                "tags": ["Auth"],
                "summary": "verify email",
                "description": "Verify email",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": true
                        },
                        "code": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Email verified, you can now login"
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": ["Auth"],
