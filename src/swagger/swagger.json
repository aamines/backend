                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": true
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Logged in"
                    }
                }
            }
        },
        "/api/v1/auth/forgot-password": {
            "post": {
                "tags": ["Auth"],
