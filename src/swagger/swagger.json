                "parameters": [{
                        "in": "body",
                        "name": "body",
                        "properties": {
                            "content": {
                                "type": "string",
                                "required": false
                            },
                            "tag": {
                                "type": "string",
                                "example": "COMMENT,QUESTION,ANSWER"
                            }
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "type": "string",
                        "required": true
                    }
                ],
