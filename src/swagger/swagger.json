                    }
                }
            }
        },
        "/api/v1/course/create-course": {
            "post": {
                "tags": ["Course"],
                "summary": "Creating a course",
                "description": "Creating a course",
                "consumes": ["multipart/form-data"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "title": {
                            "type": "string",
                            "example": "title of the course",
                            "required": true
                        },
                        "category": {
                            "type": "string",
                            "example": "UX_UI_DESIGN",
                            "required": true
                        },
                        "level": {
                            "type": "string",
                            "example": "BEGGINER",
                            "required": true
                        },
                        "price": {
                            "type": "number",
                            "example": 200,
                            "required": true
                        },
                        "description": {
                            "type": "string",
                            "example": "course description",
                            "required": true
                        },
                        "whatToLearn": {
                            "type": "string",
                            "example": "string",
                            "required": true
                        },
                        "coverImage": {
                            "type": "File",
                            "example": "image.png"
                        },
                        "video": {
                            "type": "file",
                            "example": "video.mp4"
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "course created"
                    }
                }
            }
        },
        "/api/v1/course/all": {
            "get": {
                "tags": ["Course"],
