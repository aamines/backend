{
    "swagger": "2.0",
    "info": {
        "description": "Domentation of Projectia APIs.",
        "version": "1.0.0",
        "title": "Projectia APIs",
        "termsOfService": "http://projectia.co/terms/",
        "contact": {
            "email": "projectia@gmail.com",
            "name": "Projectia"
        },
        "licence": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "tags": [{
            "name": "Auth",
            "description": "auth operations"
        },
        {
            "name": "User",
            "description": "Operations about user"
        }
    ],
    "paths": {
        "/api/v1/auth/register": {
            "post": {
                "tags": ["Auth"],
                "summary": "user registration",
                "description": "User registration",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "names": {
                            "type": "string",
                            "example": "Mfitumukiza Peter"
                        },
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        },
                        "password": {
                            "type": "string",
                            "example":"string",
                            "required": true
                        },
                        "country": {
                            "type":"string",
                            "example":"string",
                            "require": true
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "account created, check your email"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/verify-email": {
            "put": {
                "tags": ["Auth"],
                "summary": "verify email",
                "description": "Verify email",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        },
                        "code": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Email verified, you can now login"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": ["Auth"],
                "summary": "user login",
                "description": "User login",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter10@gmail.com",
                            "required": true
                        },
                        "password": {
                            "type": "string",
                            "example": "passowrd"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Logged in"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/forgot-password": {
            "post": {
                "tags": ["Auth"],
                "summary": "forgot password",
                "description": "forgot password",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "check your email"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/reset-password": {
            "put": {
                "tags": ["Auth"],
                "summary": "reset password",
                "description": "reset password",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        },
                        "code": {
                            "type": "string",
                            "example": "string",
                            "required": true
                        },
                        "password": {
                            "type": "string",
                            "example": "string",
                            "required": true
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "password reset"
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/change-password": {
            "put": {
                "tags": ["Auth"],
                "summary": "change password",
                "description": "change password",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": true
                        },
                        "oldPassword": {
                            "type": "string",
                            "example": "string"
                        },
                        "newPassword": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Password changed."
                    },
                    "500": {
                        "description": "internal server error"
                    }
                }
            }
        },
        "/api/v1/auth/user-details": {
            "get": {
                "tags": ["Auth"],
                "summary": "get user details",
                "description": "get user details",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Current user details"
                    }
                }
            }
        },
        "/api/v1/user/update-user": {
            "put": {
                "tags": ["User"],
                "summary": "update user details",
                "description": "Update user details",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "peter@gmail.com",
                            "required": false
                        },
                        "names": {
                            "type": "string",
                            "example": "Mfitumukiza Peter"
                        },
                        "country": {
                            "type": "string",
                            "example": "Rwanda"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "user updated"
                    }
                }
            }
        }
        
    }
}