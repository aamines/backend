                    }
                }],
                "responses": {
                    "200": {
                        "description": "check your email"
                    }
                }
            }
        },
        "/api/v1/auth/reset-password": {
            "put": {
                "tags": ["Auth"],
                "summary": "reset password",
                "description": "reset password",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": true
                        },
                        "code": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "201": {
                        "description": "password reset"
                    }
                }
            }
        },
        "/api/v1/auth/change-password": {
            "put": {
                "tags": ["Auth"],
                "summary": "change password",
                "description": "change password",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": true
                        },
                        "oldPassword": {
                            "type": "string",
                            "example": "string"
                        },
                        "newPassword": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Password changed."
                    }
                }
            }
        },
        "/api/v1/auth/me": {
            "get": {
                "tags": ["Auth"],
                "summary": "get user details",
                "description": "get user details",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Current user details"
                    }
                }
            }
        },
        "/api/v1/user/update-user": {
            "put": {
                "tags": ["User"],
                "summary": "update user details",
                "description": "Update user details",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "email": {
                            "type": "string",
                            "example": "davidshumbusho10@gmail.com",
                            "required": false
                        },
                        "fullName": {
                            "type": "string",
                            "example": "Byose Dawidi"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "user updated"
                    }
                }
            }
        },
        "/api/v1/comment/create-comment": {
            "post": {
                "tags": ["Comment"],
                "summary": "create comment",
                "description": "Create comment",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "properties": {
                        "content": {
                            "type": "string",
                            "required": false
                        },
                        "course_id": {
                            "type": "string",
                            "required": true
                        },
                        "tag": {
                            "type": "string",
                            "example": "COMMENT,QUESTION,ANSWER"
                        },
                        "question_id": {
                            "type": "string"
                        }
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Comment created"
                    }
                }
            }
        },
        "/api/v1/comment/{id}": {
            "get": {
                "tags": ["Comment"],
