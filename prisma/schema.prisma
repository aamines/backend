// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  names            String
  email            String   @unique
  gender           String
  banner           String?
  profile          String?
  country          String
  password         String
  verificationCode String?
  status           String?
  updatedAt        DateTime @updatedAt
  isVerified       Boolean  @default(false)
  createdAt        DateTime @default(now())
}

model Role {
  id   String @id @default(uuid())
  role String
}

model Workspace {
  id        String   @id @default(uuid())
  name      String   @unique
  type      String
  size      String   @default("A")
  profile   String?
  vision    String
  status    String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
